    .page-wrapper.page-wrapper_flex
        aside.left-pane.left-pane_flex
            .logo
                a.logo__link(href="/")
                    img.logo__image(src="img/logo.png", alt="logo")
            .nav-menu
                .nav-menu__toggle
                a.nav-menu__telephone(href="#")
                nav.nav-menu__container
                    ul.nav-menu__list
                        li.nav-menu__item
                             a.nav-menu__link.nav-menu__link_black(href="#") about
                        li.nav-menu__item
                             a.nav-menu__link.nav-menu__link_black(href="#") contracts
                        li.nav-menu__item
                             a.nav-menu__link.nav-menu__link_black(href="#") quick ship
                        li.nav-menu__item
